{
    "mcpServers": {
        "task-master-ai": {
            "command": "npx",
            "args": [
                "-y",
                "task-master-mcp"
            ],
            "env": {
                "ANTHROPIC_API_KEY": "YOUR_API_KEY_HERE",
                "PERPLEXITY_API_KEY": "YOUR_PERPLEXITY_API_KEY_HERE",
                "MODEL": "claude-3-7-sonnet-20250219",
                "PERPLEXITY_MODEL": "sonar-pro",
                "MAX_TOKENS": 4000,
                "TEMPERATURE": 0.7,
                "DEFAULT_SUBTASKS": 3,
                "DEFAULT_PRIORITY": "medium"
            }
        }
    }
}